<Grid
    x:Class="CryptographyLabs.GUI.Views.RSAFactorizationAttackResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dtvm="clr-namespace:CryptographyLabs.GUI.DesignTimeViewModel"
    mc:Ignorable="d"
    d:DesignHeight="Auto" d:DesignWidth="300"
    d:DataContext="{d:DesignInstance dtvm:RSAFactorizationAttackResultsDTVM}">

    <GroupBox Header="Results">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Private exponent" />
            <TextBox
                Grid.Column="1"
                IsReadOnly="True"
                Text="{Binding PrivateExponent, Mode=OneWay}" />
        </Grid>
    </GroupBox>
</Grid>