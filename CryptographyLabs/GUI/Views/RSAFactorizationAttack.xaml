<Grid x:Class="CryptographyLabs.GUI.Views.RSAFactorizationAttack"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:views="clr-namespace:CryptographyLabs.GUI.Views"
      mc:Ignorable="d"
      d:DesignHeight="Auto" d:DesignWidth="300">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <views:RSAFactorizationAttackParameters />

            <Grid Margin="0 12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Padding="6 0" Content="Attack" />
                <Button Grid.Column="2" Padding="6 0" Content="Cancel" />
            </Grid>

            <views:RSAFactorizationAttackResults />
        </StackPanel>
    </ScrollViewer>
</Grid>